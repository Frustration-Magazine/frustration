---
import { cn } from "@/lib/utils";
import { Image } from "astro:assets";
import { GrArticle as ArticleIcon } from "react-icons/gr";
import BackgroundCard from "./background.avif";
const { author } = Astro.props;
---

<a
  class={cn("block rounded-xl bg-cover bg-bottom text-white shadow-md", "my-3 p-3", "sm:my-5 sm:p-6")}
  href={`/posts?author=${author.slug}`}
  style={`background-image: url(${BackgroundCard.src})`}
>
  <div class={cn("flex items-center", "gap-4", "sm:gap-6")}>
    <div class={cn("size-11 shrink-0", "sm:size-14", "lg:size-16")}>
      <Image
        title={author.name}
        alt={author.name}
        width={100}
        height={100}
        src={author.avatar.url}
        class="inline h-full w-full rounded-full"
      />
    </div>

    <div>
      <h5 class={cn("font-bebas", "text-3xl", "sm:text-5xl")}>
        {author.name}
      </h5>
      {
        author.description ? (
          <h6 class={cn("font-bebas leading-none!", "text-lg", "sm:text-xl")}>{author.description}</h6>
        ) : null
      }
      {
        (
          <div class={cn("font-open-sans mt-1 flex items-center gap-1.5 font-semibold", "text-xs", "sm:text-sm")}>
            <ArticleIcon />
            <span> Tous les articles </span>
          </div>
        )
      }
    </div>
  </div>
</a>
