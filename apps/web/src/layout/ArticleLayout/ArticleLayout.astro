---
import { Image } from "astro:assets";
import AuthorPicture from "./components/AuthorPicture.astro";
import TagIcon from "./assets/icons/tag.svg?raw";
import Footer from "../BaseLayout/Footer/Footer.astro";
import ArticleSummary from "./components/ArticleSummary/ArticleSummary";
const { title, author, date, categories, image } = Astro.props;
---

<div class="article-layout bg-white">
  <div class="scroll-watcher sticky top-0 mb-6 h-[1.3vh] w-0 bg-yellow"></div>
  <article class="post m-auto w-[75ch] max-w-[90vw]">
    <!-- 🔠 Titles and metadata -->
    <div class="mb-[50px]">
      <h1
        class="mb-2 border-b-[5px] md:border-b-[6px] border-black font-bebas text-4xl xs:text-5xl sm:text-6xl md:text-7xl leading-[90%]">
        {title}
      </h1>
      <div class="flex items-center text-sm md:text-base">
        <AuthorPicture
          author={author}
          size={20}
        />
        <span>{author}</span>
        <span class="mx-1">|</span>
        {date}
        <div class="categories ml-auto flex items-center gap-2">
          {
            categories.map((category: any) => (
              <div class="flex items-center [&>svg]:mr-1.5 [&>svg]:w-[15px]">
                <Fragment set:html={TagIcon} />
                <span>{category}</span>
              </div>
            ))
          }
        </div>
      </div>
    </div>
    <!-- 🖼️ Featured image -->
    <Image
      class="mb-[25px] w-full object-cover"
      title={image.title}
      src={image.sourceUrl}
      alt={image.altText}
      width="1000"
      height="600"
    />
    <!-- 🗞️ Content -->
    <div class="article-content">
      <slot name="article-content" />
    </div>

    <!-- 🤓 Author -->
    <footer>
      <AuthorPicture
        author={author}
        size={175}
      />
      <p>{author}</p>
    </footer>
  </article>
  <!-- 🔖 Summary -->
  <ArticleSummary client:load />
  <!-- 🔽 Footer -->
  <Footer transition:persist />
</div>

<style is:global>
  .article-layout {
    scroll-behavior: smooth;
    width: minmax(200px, 75ch);
  }

  @media (min-width: 1280px) {
    .article-layout {
      display: grid;
      grid-template-columns: 1fr minmax(200px, 75ch) 1fr;
      grid-template-areas:
        "scrollwatcher scrollwatcher scrollwatcher"
        ". article sidenav";
    }
  }

  .article-layout .scrollwatcher {
    grid-area: scrollwatcher;
  }
  .article-layout article {
    grid-area: article;
  }

  .article-layout .article-summary {
    grid-area: sidenav;
    overflow: auto;
    container-type: inline-size;
    height: fit-content;
    position: sticky;
    top: 80px;
  }

  .article-layout footer {
    grid-column: 1 / -1;
    margin-top: 50px;
  }

  @keyframes scroll-watcher {
    to {
      width: 100%;
    }
  }

  .scroll-watcher {
    animation: scroll-watcher linear;
    animation-timeline: scroll();
    position: sticky;
    top: 50px;
    grid-area: scrollwatcher;
  }

  article.post .article-content iframe {
    width: 100%;
    height: 500px;
  }

  article.post .article-content h2 {
    color: #fff200;
    background: black;
    font-size: 42px;
    line-height: 120%;
    width: fitarticle-content;
    text-transform: uppercase;
    font-family: "Bebas Neue";
    padding: 12px 15px 10px 15px;
    margin-top: 45px;
    margin-bottom: 25px;
  }

  article.post .article-content p {
    margin-bottom: 15px;
    font-family: "Open Sans", Arial, sans-serif;
    font-size: 16px;
    line-height: 30px;
    font-weight: 400;
  }

  article.post .article-content blockquote {
    border-left: 5px solid #fff200;
    margin: 0 0 1.75em;
    padding-left: 1em;
  }

  article.post .article-content blockquote p {
    font-weight: 600;
    font-size: 20px;
  }
  article.post .article-content strong {
    font-weight: 900;
  }

  article.post .article-content figure {
    margin: 30px 0;
  }

  article.post .article-content figure > * {
    margin: auto;
  }

  article.post .article-content a img {
    margin: auto;
  }

  article.post .article-content figcaption {
    margin-top: 5px;
    padding: 0 10ch;
    font-weight: 100;
    color: #4b5563;
    font-size: 14px;
  }

  article.post .article-content br {
    display: none;
  }

  article.post .article-content p:has(img) {
    line-height: 110%;
    font-weight: 900;
    font-size: 14px;
    margin: 40px 0;
  }

  article.post .article-content p img {
    width: 100%;
    margin-bottom: 5px;
  }

  article.post .article-content iframe:not([src^="https://www.youtube.com"])
  {
    display: none;
  }

  article.post .article-content .twitter-tweet {
    margin: 20px auto;
  }

  /* Don't display old manually made articles footer */

  /* article.post article-content hr {
    display: none;
  }
  article.post .article-content hr ~ * {
    display: none;
  } */
</style>
