---
import BaseLayout from "../BaseLayout/BaseLayout.astro";
import { cn } from "@/lib/utils";
---

<BaseLayout {...Astro.props}>
  <div class="bg-white grow relative">
    <slot name="header" />
    <div
      class={cn(
        "grid grid-cols-[1fr_min(75ch,93vw)_1fr]",
        "py-8",
        "md:py-10",
        "xl:py-16",
        "2xl:py-16",
        "3xl:py-18",
      )}>
      <div>
        <slot name="left" />
      </div>
      <slot name="content" />
      <div>
        <slot name="right" />
      </div>
    </div>
  </div>
</BaseLayout>
