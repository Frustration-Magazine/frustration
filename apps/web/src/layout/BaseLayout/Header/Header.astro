---
import { Image } from "astro:assets";
import frustrationLogo from "./logo-frustration.webp";
import Banner from "./banners/Banner.astro";

// ðŸ§± Components
import { GiHamburgerMenu } from "react-icons/gi";
import SearchOverlay from "./_components/SearchOverlay";

const { displayBanner = true } = Astro.props;
---

<header class="sticky top-0 z-20 @container">
  <nav
    class="flex items-center bg-black p-1.5 text-yellow md:p-3 lg:px-4 lg:py-3">
    <a
      aria-label="Accueil"
      href="https://www.frustrationmagazine.fr/"
      class="mr-auto w-32 md:w-36 lg:w-48">
      <Image
        src={frustrationLogo}
        width="300"
        alt="Logo de Frustration"
      />
    </a>
    <div class="flex gap-2 md:gap-3 xl:gap-4">
      <SearchOverlay client:load />
    </div>
