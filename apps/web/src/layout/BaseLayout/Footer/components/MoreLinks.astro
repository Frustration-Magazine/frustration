---
import { cn } from "@/lib/utils";

const MORE_LINKS = [
  {
    name: "Mentions légales",
    url: "/mentions-legales",
  },
  {
    name: "Politique de confidentialité",
    url: "/politique-de-confidentialite",
  },
  {
    name: "Nous contacter",
    url: "/contact",
  },
  {
    name: "Nos événements",
    url: "/evenements",
  },
  {
    name: "Qui sommes-nous ?",
    url: "/auteurs",
  },
];
---

<ul
  class={cn(
    "font-bakbak text-primary flex items-center justify-center bg-black px-8 text-center leading-none",
    "flex-col gap-2 py-2",
    "sm:flex-row sm:gap-4",
    "lg:py-2 lg:text-lg",
  )}
>
  {
    MORE_LINKS.map(({ name, url }) => (
      <li>
        <a
          href={url}
          class={cn(
            "relative",
            "text-sm",
            "sm:text-base",
            "md:text-lg",
            "before:bg-primary before:absolute before:bottom-0 before:left-1/2 before:block before:h-[2px] before:w-0 before:translate-x-[-50%] before:transition-all before:content-[''] hover:before:w-full",
          )}
        >
          {name}
        </a>
      </li>
    ))
  }
</ul>
