---
import { Image } from "astro:assets";
import H5 from "./H5.astro";

const SOCIAL_NETWORKS = [
  {
    name: "X",
    url: "https://twitter.com/Frustration_web",
    iconName: "X",
  },
  {
    name: "Instagram",
    url: "https://www.instagram.com/frustrationmag/",
    iconName: "instagram",
  },
  {
    name: "Youtube",
    url: "https://www.youtube.com/channel/UCHCwlzgXqqjrNxfVOmLsU5w",
    iconName: "youtube",
  },
  {
    name: "Threads",
    url: "https://www.threads.net/@frustrationmag",
    iconName: "threads",
  },
  {
    name: "Facebook",
    url: "https://www.facebook.com/FrustrationMag",
    iconName: "facebook",
  },
  {
    name: "TikTok",
    url: "https://www.tiktok.com/@frustrationmag",
    iconName: "tiktok",
  },
  {
    name: "Bluesky",
    url: "https://web-cdn.bsky.app/profile/did:plc:ddruc4bdy27pja4dwk4pqu4k",
    iconName: "bluesky",
  },
  {
    name: "Mastodon",
    url: "https://mastodon.social/@frustrationmagazine",
    iconName: "mastodon",
  },
  {
    name: "Flux RSS",
    url: "https://www.frustrationmagazine.fr/feed.xml",
    iconName: "rss",
  },
];
const loadIcon = async (iconName: string) => (await import(`../icons/${iconName}.svg`)).default;
---

<div class="col-[-2_/_-1] mb-5">
  <H5>Nos réseaux sociaux</H5>
  <ul class="mt-4 flex items-center justify-center gap-3 sm:justify-start">
    {
      SOCIAL_NETWORKS.map(({ name, url, iconName }) => (
        <li>
          <a
            aria-label={name}
            href={url}
            target="_blank"
          >
            <Image
              src={loadIcon(iconName)}
              width="25"
              height="25"
              alt={name}
              title={`Accéder à notre ${name}`}
            />
          </a>
        </li>
      ))
    }
  </ul>
</div>
