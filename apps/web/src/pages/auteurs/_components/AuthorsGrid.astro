---
import AuthorCard from "@/pages/auteurs/_components/AuthorCard.astro";
import type { Author } from "../_models";
import { cn } from "@/lib/utils";

type Props = {
  authors: Author[];
  className: string;
};

const { authors, className }: Props = Astro.props;
---

<ul class={cn("grid grid-cols-1 gap-8 sm:grid-cols-2", className)}>
  {
    authors.map((author: Author) => (
      <AuthorCard
        name={author.name}
        slug={author.slug}
        description={author.description}
        avatarUrl={author.avatar.url}
      />
    ))
  }
</ul>
