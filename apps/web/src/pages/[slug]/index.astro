---
import PostLayout from "@web/layout/PostLayout/PostLayout.astro";
import {
  type Post,
  fetchPosts,
  formatTitle,
  formatAuthor,
  formatDate,
  formatCategories,
  formatContent,
} from "@/data-access/wordpress";

// ðŸ§° Config
export const prerender = false;

const { slug } = Astro.params;
const post: Post = (await fetchPosts({ slug }, [
  "title",
  "slug",
  "author",
  "date",
  "categories",
  "image",
  "content",
])) as Post;

if (!post) return Astro.rewrite("/404");

// This will cache the content of any page for 5 minutes in user browser and 1 week in CDN (every page is invalidated on every deploy)
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=300, s-maxage=31536000",
);
---

<PostLayout {...post}>
  <Fragment
    slot="content"
    set:html={formatContent(post)}
  />
</PostLayout>
