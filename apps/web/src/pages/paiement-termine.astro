---
// 🖼️ Layout
import BaseLayout from "@web/layout/BaseLayout/BaseLayout.astro";
import PageLayout from "@web/layout/PageLayout/PageLayout.astro";

const { searchParams } = Astro.url;
const mode = searchParams.get("mode");
const hasGifts = searchParams.has("has_gifts");

export const prerender = false;
---

<BaseLayout
  title="Merci pour votre soutien !"
  displayBanner={false}>
  <PageLayout>
    <!-- 🅰️ Titles -->
    <h2 class="font-bebas text-center text-6xl font-bold mb-8">
      Merci pour votre soutien !
    </h2>
    <!-- 🔠 Content -->
    {
      mode === "payment" ? (
        <>
          <p class="mb-3">
            Votre don de soutien a bien été reçu ! 🎉 Nous avons hâte de vous partager tous les projets que nous
            vous préparons pour 2025 !
          </p>
          <p class="mb-3">
            N'hésitez pas à{" "}
            <b>
              nous contacter à{" "}
              <a
                class="text-blue underline"
                href="mailto:redaction@frustrationmagazine.fr">
                redaction@frustrationmagazine.fr
              </a>
            </b>
            si vous avez des questions.
          </p>
          <p class="mb-3">
            En attendant, vous pouvez continuer{" "}
            <a
              class="text-blue underline"
              href="https://www.frustrationmagazine.fr/">
              à naviguer sur notre site
            </a>{" "}
            pour découvrir nos derniers articles et vidéos 😉
          </p>
        </>
      ) : mode === "subscription" ? (
        <>
          <p class="mb-3">
            Votre abonnement est bien activé ! 🎉
          </p>
          {hasGifts ? (
            <>
              <p class="mb-3">
                Vous recevrez d'ici quelques semaines vos <b>contreparties</b> à
                l'adresse que vous avez renseignée lors de votre paiement.
                N'hésitez pas à{" "}
                <b>
                  nous contacter à{" "}
                  <a
                    class="text-blue underline"
                    href="mailto:redaction@frustrationmagazine.fr">
                    redaction@frustrationmagazine.fr
                  </a>
                </b>
                si vous avez des questions ou besoin d'effectuer une
                modification.
              </p>
            </>
          ) : (
            <p class="mb-3">
              N'hésitez pas à{" "}
              <b>
                nous contacter à{" "}
                <a
                  class="text-blue underline"
                  href="mailto:redaction@frustrationmagazine.fr">
                  redaction@frustrationmagazine.fr
                </a>
              </b>
              si vous avez des questions.
            </p>
          )}
          <p class="mb-3">
            En attendant, vous pouvez continuer
            <a
              class="text-blue underline"
              href="https://www.frustrationmagazine.fr/">
              à naviguer sur notre site
            </a>{" "}
            pour découvrir nos derniers articles et vidéos 😉
          </p>
        </>
      ) : null
    }
  </PageLayout>
</BaseLayout>
