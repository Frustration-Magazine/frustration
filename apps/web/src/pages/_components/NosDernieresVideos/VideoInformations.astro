---
import { Image } from "astro:assets";
import { ListVideo } from "lucide-react";
const { thumbnails, channelTitle, description, title, playlist, id } = Astro.props;
---

<div class="video-informations relative h-full overflow-scroll rounded-xl">
  <div class="absolute left-0 top-0 w-[200%] translate-x-[-25%] opacity-30 blur-lg">
    <Image
      src={thumbnails.maxres.url}
      alt=""
      width="1280"
      height="720"
      data-id={id}
      class="decorative-video-thumbnail"
    />
  </div>
  <div class="relative z-10 p-6">
    <h3 class="mb-5 text-center text-2xl font-bold leading-none">{title}</h3>
    <div class="flex flex-wrap items-center gap-3 whitespace-nowrap">
      {
        playlist && (
          <a
            href={playlist.url}
            target="_blank"
            class="flex items-center gap-1">
            <ListVideo size={14} />
            <span class="text-sm">{playlist.name}</span>
          </a>
        )
      }
      <a
        href=""
        target="_blank"
        class="flex w-fit items-center gap-1 whitespace-nowrap rounded-full bg-[#8F8F8F] py-0.5 pl-1.5 pr-2">
        <img
          src="img/favicon_yt.png"
          width="18"
        />
        <span class="text-xs">/</span>
        <span class="text-sm leading-none">{channelTitle}</span>
      </a>
    </div>
    <p class="color-test"></p>
    <p class="mt-3 line-clamp-[15]">{description}</p>
  </div>
</div>
<style is:global>
  .video-informations {
    background: linear-gradient(to bottom, rgba(68, 76, 89, 0.8) 0%, rgba(68, 76, 89, 0.298) 33.000001%, rgba(15, 15, 15, 1) 100%), linear-gradient(to bottom, #444c59, #444c59);
    display: none;
  }
</style>
