import { cn } from "@/libs/tailwind";
import { Image } from "astro:assets";

const { width, src, reverse } = Astro.props;

const NEWSLETTER_URL =
  "https://www.frustrationmagazine.fr/?mailpoet_router&endpoint=view_in_browser&action=view&data=WzY4LCI1NWU3MmQ0MmVjNjQiLDAsMCwzNDY1LDFd";
---

<a
  href={NEWSLETTER_URL}
  class={cn("cursor-pointer hover:[animation-play-state:paused]", {
    "animate-sliding": !reverse,
    "animate-slidingReverse": reverse,
  })}
  target="_blank">
  <Image
    src={src}
    alt="Exemple de newsletter"
    width={width}
    class="shadow-lg"
  />
</a>
