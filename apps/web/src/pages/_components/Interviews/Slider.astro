---
import { fetchInterviews } from "@/libs/wordpress";
const NB_INTERVIEWS = 6;
const interviews = await fetchInterviews({ first: NB_INTERVIEWS });
import Interview from "./Card.astro";
---

<section
  class="splide splide-interviews max-w-full"
  aria-label="Carrousel avec les derniers entretiens de Frustration Magazine">
  <div class="splide__track max-w-full py-12">
    <ul class="splide__list max-w-full">
      {
        interviews.map((interview: any) => (
          <li class="splide__slide group pb-8 transition-all hover:scale-105">
            <Interview {...interview} />
          </li>
        ))
      }
    </ul>
  </div>
</section>
<style is:global>
  .splide-interviews .blurred-edges {
    mask-image: radial-gradient(circle, black 0%, rgba(0, 0, 0, 0) 50%);
  }
  .splide-interviews .splide__pagination {
    bottom: -2rem !important;
  }

  .splide-interviews .splide__arrow {
    width: 75px;
    height: 75px;
    font-size: 25px;
  }
  @media (width < 550px) {
    .splide-interviews .splide__arrow {
      width: 45px;
      height: 45px;
      font-size: 16px;
      top: 105%;
    }
    .splide-interviews .splide__arrow--prev {
      left: 15%;
    }
    .splide-interviews .splide__arrow--next {
      right: 15%;
    }
  }
</style>
<script>
  import "./slider";
</script>
