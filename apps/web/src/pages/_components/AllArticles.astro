---
import { cn } from "@/lib/utils";

const { category = "", label } = Astro.props;
---

<a
  href={`/posts${category ? `?category=${category}` : ""}`}
  class={cn(
    "relative mx-auto mt-[5vh] block w-fit overflow-hidden rounded-[20px]",
    //! TODO: fix animation broken since tailwind v4
    "before:animate-disco before:scale-x-10 before:scale-y-6 before:absolute before:h-full before:w-full before:bg-[conic-gradient(#faf7c2,#FFF200,#898106)] before:blur-sm",
  )}
>
  <span
    class={cn(
      "font-bebas text-primary relative m-1.5 block rounded-[13px] bg-black px-10 pb-3 pt-4 uppercase",
      "text-4xl",
      "md:text-5xl",
    )}
  >
    {label}
  </span>
</a>
