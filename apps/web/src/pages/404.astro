---
import BaseLayout from "@/layout/BaseLayout/BaseLayout.astro";
export const prerender = false;
---

<BaseLayout title="Page inexistante">
  <div class="flex h-[700px] flex-col items-center justify-start gap-8 bg-white p-16">
    <p class="text-3xl">La page que vous recherchez n'existe pas 😭</p>
    <a
      href="/"
      class="bg-primary rounded-md px-4 py-2 text-xl font-bold"
      >↩️ Retour à la page d'accueil</a
    >
  </div>
</BaseLayout>
